{% extends 'base.html.twig' %}

{% block title %}Stat market cap{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<table class="table">
    <thead>
        <th>Intervalle</th>
        <th>Nombre cryptos</th>
    </thead>
    <tbody>
        <tr>
            <td><a href="{{path('app_stat_crypto50')}}"> MarketCap inférieur à 50 Milliards</a></td>
            <td>{{countCrypto50}}</td>
        </tr>
        <tr>
            <td><a href="{{path('app_stat_crypto50To500')}}">MarketCap entre 50 Milliards et 500 Milliards</a></td>
            <td>{{countCrypto50To500}}</td>
        </tr>
        <tr>
            <td><a href="{{path('app_stat_crypto500')}}">MarketCap supérieur à 500 Milliards</a></td>
            <td>{{countCrypto500}}</td>
        </tr>
    </tbody>
</table>

{% endblock %}
