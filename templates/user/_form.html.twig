{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
<div class="text-center">
    <h1>Modifié l'utilisateur</h1>
</div>
<div class="d-flex justify-content-center">
    <div class="w-50 p-3 border border-3 ">
    {{ form_start(form) }}
        <div class="m-2">
            {{ form_row(form.login) }}
        </div>
        {#<div class="m-2">
            {{ form_row(form.plainPassword, {
                label: 'Mot de passe'
            }) }}
        </div>#}
        
        <div class="m-2">
            {{ form_row(form.email) }}
        </div>
        <div class="m-2">
            {{ form_row(form.name, {
                label: 'Nom'
            }) }}
        </div>
        <div class="m-2">
            {{ form_row(form.lastname, {
                label: 'Prénom'
            }) }}
        </div>
        <div class="m-2">
            {{ form_row(form.birthday_date, {
                label: 'Date de naissance'
            }) }}
        </div>
        <div class="m-2">
            {{ form_row(form.adress, {
                label: 'Adresse'
            }) }}
        </div>
        <div class="m-2">
            {{ form_row(form.phone_number, {
                label: 'Numéro de téléphone'
            }) }}
        </div>
        {#{ form_row(form.agreeTerms) }#}
        <button type="submit" class="btn btn-lg btn-success w-100">Modifier</button>
    {{ form_end(form) }}
    <div class="mt-4">
        {{ include('user/_delete_form.html.twig') }}
    </div>
    </div>
</div>