<!DOCTYPE html>
<html>
        <head>
                <meta charset="UTF-8">
                <title>{% block title %}Welcome!{% endblock %}</title>
                {% block stylesheets %}
                        <!-- CSS only -->
                        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
                        <!-- JavaScript Bundle with Popper -->
                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

                {% endblock %}
        </head>
        <style>
        a{
                color: primary;

        }
        
        button{
                background: transparent;
                border:none;
        }

        .buttonAccueil{
                text-decoration:none;
        }

        #majCrypto{
                text-decoration:none;
        }
        </style>
        <body>
                <nav class="navbar navbar-light bg-light">
                        <div class="container">
                                <a class="navbar-brand d-flex" href="{{ path('app_accueil')}}">
                                        <img src="/img/logo_GC_bis.png" alt="logo" width="60" height="55" class="d-inline-block align-text-center">

                                <h1>GroovyCrypto</h1></a>
                        <a id="majCrypto" class="btn btn-outline-success" href="{{ path('maj_crypto_API') }}">Mettre à jour des cryptomonnaies</a>

                        {% if app.user %}
                                {# Si l'utilisateur est authentifié #}
                                {% if is_granted('ROLE_ADMIN') %}
                                        {# Si l'utilisateur est authentifié et qu'il est admin #}
                                        <a class="btn btn-outline-warning" href="{{ path('admin') }}">Page admin</a>
                                {% endif %}
                                <div>
                                        Login : {{ app.user.username }} 
                                        <a class="btn btn-lg btn-outline-primary" href="{{ path('app_abonnements') }}">Mes abonnements</a>
                                        <a class="btn btn-lg btn-outline-danger" href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                        {% else %}
                                <div>
                                        <a class="btn btn-lg btn-outline-primary" href="{{ path('app_register') }}">S'inscrire</a>
                                        <a class="btn btn-lg btn-outline-success" href="{{ path('app_login') }}">Se connecter</a>
                                </div>
                        {% endif %}
                        </div>
                </nav>
                <div class="container">
                        {% if message is defined %}
                                <div class="alert alert-danger">
                                        {{ message }}
                                </div>
                        {% endif %}
                        {% block body %}
                        {% endblock %}
                </div>
                {% block javascripts %}
                        <script
                                src="https://code.jquery.com/jquery-3.5.1.min.js"
                                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                        crossorigin="anonymous">
                        </script>
                        <script src="/js/script.js"></script>
                {% endblock %}
        </body>
</html>
