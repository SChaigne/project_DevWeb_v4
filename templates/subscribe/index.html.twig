{% extends 'base.html.twig' %}

{% block title %}Subscribe index{% endblock %}

{% block body %}
    <h1>Subscribe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login user</th>
                <th>Symbol crypto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subscribe in subscribes %}
            <tr>
                <td>{{ subscribe.id }}</td>
                <td>{{subscribe.idUser[0].login}}</td>
                <td>{{subscribe.idCrypto[0].symbol}}</td>
                <td>
                    <a href="{{ path('app_subscribe_show', {'id': subscribe.id}) }}">show</a>
                    <a href="{{ path('app_subscribe_edit', {'id': subscribe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<a href="{{ path('app_subscribe_new') }}">Create new</a>#}
{% endblock %}
